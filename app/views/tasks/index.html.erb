<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task|%>
  <li>
    <%= link_to task.title, task_path(task) %>
    <%= link_to task_path(task.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
    Delete
    <% end %>
  </li>
  <% end %>

</ul>

<p> <%= link_to new_task_path do %> </p>
Add a new task
<% end %>
